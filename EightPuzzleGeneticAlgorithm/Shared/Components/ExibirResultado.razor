@if (MostrarResultado.HasValue)
{
    <div class="row mt-2 mb-3">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <b>RESULTADO</b>
                </div>
                <div class="card-body">
                    @if (MostrarResultado.Value)
                    {
                        <div class="alert alert-success mt-2" role="alert">
                            Uma solução foi encontrada!! =D
                        </div>

                        @foreach (MarkupString no in Resultado)
                        {
                            @no

                            <br />
                        }
                    }
                    else
                    {
                        <div class="alert alert-danger mt-2" role="alert">
                            Não foi encontrada uma solução com os parâmetros informados
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public List<MarkupString> Resultado { get; set; }

    [Parameter]
    public bool? MostrarResultado { get; set; }
}
